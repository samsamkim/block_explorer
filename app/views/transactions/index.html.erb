<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Deposit</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |t| %>
      <tr>
        <td><%= t.sender %></td>
        <td><%= t.receiver %></td>
        <td><%= number_with_delimiter(t.deposit.to_s) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
